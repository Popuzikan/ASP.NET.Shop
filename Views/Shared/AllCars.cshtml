@model Car

    <link href="~/css/style.css" rel="stylesheet" type="text/css"/>

<style>

    .card{

        width: 30%;
        margin-left: 1%;
        color: black;     
    }

    .img-thumbnail {
    
            width : auto;   
    }

</style>

<div class="card mt-2">

    <div class="card-body">

        <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />

        <h2 class="my-lg-0">@Model.Name</h2>

        <p>@Model.ShortDesc</p>

        <p>Price: @Model.Price.ToString("c")</p>

        <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-Id="@Model.Id">More details</a></p>
    </div>
</div>
